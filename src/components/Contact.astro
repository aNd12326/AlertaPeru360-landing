<section
    id="contacto"
    class="py-20 bg-[#f6f6f6] w-full min-h-screen flex flex-col items-center justify-center"
>
    <div class="max-w-[1200px] mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold mb-4 text-gray-900">Contáctanos</h2>
        <p class="text-lg text-gray-700 max-w-2xl mx-auto mb-16">
            ¿Tienes preguntas o necesitas ayuda? Contáctanos y nuestro equipo te
            brindará el soporte que necesitas.
        </p>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 text-left">
            <!-- Columna Izquierda: Opciones de Contacto -->
            <div>
                <div class="space-y-8">
                    <!-- Soporte técnico -->
                    <div class="flex items-start gap-4">
                        <div class="flex-shrink-0">
                            <svg
                                class="w-8 h-8 text-gray-700"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h3
                                class="text-xl font-semibold mb-1 text-gray-900"
                            >
                                Soporte técnico
                            </h3>
                            <p class="text-gray-700 mb-2">
                                Obten ayuda con cualquier problema técnico o
                                consulta sobre la plataforma.
                            </p>
                            <a
                                href="#"
                                class="text-bg-[#141414] hover:underline flex items-center"
                            >
                                Obtener soporte <span class="ml-2">&rarr;</span>
                            </a>
                        </div>
                    </div>

                    <!-- Consultas Generales -->
                    <div class="flex items-start gap-4">
                        <div class="flex-shrink-0">
                            <svg
                                class="w-8 h-8 text-gray-700"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h3
                                class="text-xl font-semibold mb-1 text-gray-900"
                            >
                                Consultas Generales
                            </h3>
                            <p class="text-gray-700 mb-2">
                                Envíanos tus preguntas y comentarios sobre
                                AlertaPerú360
                            </p>
                            <a
                                href="#"
                                class="text-bg-[#141414] hover:underline flex items-center"
                            >
                                Obtener soporte <span class="ml-2">&rarr;</span>
                            </a>
                        </div>
                    </div>

                    <!-- Línea de Emergencia -->
                    <div class="flex items-start gap-4">
                        <div class="flex-shrink-0">
                            <svg
                                class="w-8 h-8 text-gray-700"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.134l-1.897.948a1 1 0 00-.54 1.49l.395.898a1 1 0 00.826 1.342l2.972.844a1 1 0 001.07-.264l1.17-1.17a1 1 0 011.266-.153l2.584 1.37a1 1 0 01.62 1.077V19a2 2 0 01-2 2H5a2 2 0 01-2-2V5z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h3
                                class="text-xl font-semibold mb-1 text-gray-900"
                            >
                                Línea de Emergencia
                            </h3>
                            <p class="text-gray-700 mb-2">
                                Comunícate con nosotros en caso de emergencia o
                                situación de riesgo.
                            </p>
                            <a
                                href="#"
                                class="text-bg-[#141414] hover:underline flex items-center"
                            >
                                Obtener soporte <span class="ml-2">&rarr;</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Columna Derecha: Formulario de Contacto -->
            <div class="mt-12 lg:mt-0">
                <form class="space-y-6 bg-white p-8 rounded-lg shadow-lg">
                    <h3
                        class="text-2xl font-bold text-gray-900 text-center mb-6"
                    >
                        Envíanos un Mensaje
                    </h3>
                    <div>
                        <label
                            for="name"
                            class="block text-sm font-medium text-gray-700"
                            >Nombre</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            class="mt-1 block w-full py-2 border-b-2 border-gray-300 focus:border-gray-900 focus:outline-none transition-colors duration-300"
                        />
                    </div>
                    <div>
                        <label
                            for="email"
                            class="block text-sm font-medium text-gray-700"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="mt-1 block w-full py-2 border-b-2 border-gray-300 focus:border-gray-900 focus:outline-none transition-colors duration-300"
                        />
                    </div>
                    <div>
                        <label
                            for="message"
                            class="block text-sm font-medium text-gray-700"
                            >Mensaje</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            class="mt-1 block w-full py-2 border-b-2 border-gray-300 focus:border-gray-900 focus:outline-none transition-colors duration-300"
                        ></textarea>
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-black text-white py-3 px-4 rounded-md font-semibold hover:bg-[#141414] focus:outline-none focus:ring-2 focus:bg-[#141414] focus:ring-offset-2 cursor-pointer"
                    >
                        Enviar Mensaje
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

