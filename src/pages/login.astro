---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Iniciar Sesión - AlertaPerú360">
  <div class="bg-gray-100 flex items-center justify-center min-h-screen w-full">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-6">Iniciar Sesión</h2>
      <form class="space-y-6">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="mt-1 block w-full px-3 py-2 border-b-0 placeholder-gray-400 focus:outline-none focus:border-b focus:border-black sm:text-sm appearance-none input-underline-transition"
            placeholder="tu@ejemplo.com"
          />
        </div>
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700">Contraseña</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="mt-1 block w-full px-3 py-2 border-b-0 placeholder-gray-400 focus:outline-none focus:border-b focus:border-black sm:text-sm appearance-none input-underline-transition"
            placeholder="••••••••"
          />
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input
              id="remember-me"
              name="remember-me"
              type="checkbox"
              class="h-4 w-4 text-gray-900 focus:ring-gray-700 border-gray-300 rounded"
            />
            <label for="remember-me" class="ml-2 block text-sm text-gray-900">
              Recordarme
            </label>
          </div>
          <div class="text-sm">
            <a href="#" class="font-medium text-gray-900 hover:text-gray-700">
              ¿Olvidaste tu contraseña?
            </a>
          </div>
        </div>
        <div>
          <button
            type="submit"
            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-black hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-700 cursor-pointer transition-colors duration-300"
          >
            Iniciar Sesión
          </button>
        </div>
      </form>
      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          ¿No tienes una cuenta? 
          <a href="/register/" class="font-medium text-gray-900 hover:text-gray-700">
            Regístrate
          </a>
        </p>
      </div>
    </div>
  </div>
</Layout>